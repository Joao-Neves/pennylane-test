<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>
<%= form_with(url: recipes_path, method: "GET", data: { controller: "form-submission", turbo_frame: "recipes", turbo_action: "advance" }) do |form| %>
  <%= form.label :query, "Search by ingredient:" %>
  <%= form.text_field :query, data: { action: "input->form-submission#search" } %>
<% end %>
<%= render "recipes", recipes: @recipes %>
